{% extends "layouts/layout.twig" %}

{% block content %}
  <!-- ***** Hero Area Start ***** -->
  <section class="hero-area">
    <div class="hero-slides owl-carousel">
      {% for slide in data.homepage.slides %}
        <!-- Single Hero Slide -->
        <div class="single-hero-slide bg-img slide-background-overlay" style="background-image: url({{ slide.url }}?fit=clip&w=1000&h=1578);">
          <div class="container h-100">
            <div class="row h-100 align-items-end">
              <div class="col-12">
                <div class="hero-slides-content">
                  <div class="line"></div>
                  <h2>{{ slide.title }}</h2>
                  <p>{{ slide.alt }}</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </section>
  <!-- ***** Hero Area End ***** -->

  <!-- ***** Portfolio Area Start ***** -->
  <div class="portfolio-area section-padding-100">
    <div class="container">

      <div class="row">
        <div class="col-12">
          <div class="portfolio-title">
            <h2>{{data.homepage.quote}}</h2>
          </div>
        </div>
      </div>

      <div class="row justify-content-between">
        <!-- Single Portfoio Area -->
        <div class="col-12 col-md-5">
          <div class="single-portfolio-item mt-100 portfolio-item-1 wow fadeIn">
            <div class="backend-content">
              <img src="assets/images/dots.png" class="dots" />
              <h2>Reality</h2>
            </div>
            {% include "partials/item.twig" with {"work": data.works[0] } %}
          </div>
        </div>
        <!-- Single Portfoio Area -->
        <div class="col-12 col-md-6">
          <div class="single-portfolio-item mt-230 portfolio-item-2 wow fadeIn">
            <div class="backend-content">
              <img src="assets/images/dots.png" class="dots" />
            </div>
            {% include "partials/item.twig" with {"work": data.works[1] } %}
          </div>
        </div>
      </div>

      <div class="row">
        <!-- Single Portfoio Area -->
        <div class="col-12 col-md-10">
          <div class="single-portfolio-item mt-100 portfolio-item-3 wow fadeIn">
            <div class="backend-content">
              <img src="assets/images/dots.png" class="dots" />
              <h2>Photography</h2>
            </div>
            {% include "partials/item.twig" with {"work": data.works[2] } %}
          </div>
        </div>
      </div>

      <div class="row justify-content-end">
        <!-- Single Portfoio Area -->
        <div class="col-12 col-md-6">
          <div class="single-portfolio-item portfolio-item-4 wow fadeIn">
            <div class="backend-content">
              <img src="assets/images/dots.png" class="dots" />
            </div>
            {% include "partials/item.twig" with {"work": data.works[3] } %}
          </div>
        </div>
      </div>

      <div class="row">
        <!-- Single Portfoio Area -->
        <div class="col-12 col-md-5">
          <div class="single-portfolio-item portfolio-item-5 wow fadeIn">
            <div class="backend-content">
              <img src="assets/images/dots.png" class="dots" />
              <h2>Hope</h2>
            </div>
            {% include "partials/item.twig" with {"work": data.works[4] } %}
          </div>
        </div>
      </div>

      <div class="row justify-content-center">
        <!-- Single Portfoio Area -->
        <div class="col-12 col-md-4">
          <div class="single-portfolio-item portfolio-item-6 wow fadeIn">
            {% include "partials/item.twig" with {"work": data.works[5] } %}
          </div>
        </div>
      </div>

      <div class="row justify-content-end">
        <!-- Single Portfoio Area -->
        <div class="col-12 col-md-4">
